.goods_card {
  background-color: #ffffff;
  position: relative;
  padding-left: 20rpx;
}
.goods_card .goodsdetail {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    padding: 20rpx 0;
}
.goods_card .goodscard_image_wrapper {
    margin-right: 20rpx;
    position: relative;
}
.goods_card .goodscard_image_wrapper .goods_image {
      width: 200rpx;
      height: 200rpx;
}
.goods_card .goodscard_right {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    padding-right: 20rpx;
    font-size: 26rpx;
    overflow: hidden;
    padding-bottom: 20rpx;
    position: relative;
}
.goods_card .name {
    font-weight: 700;
    overflow: hidden;
    font-size: 28rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.goods_card .desc {
    font-size: 26rpx;
    color: #999;
}
.goods_card .salesinfo_price {
    font-size: 24rpx;
    color: #ff5339;
    padding-bottom: 0;
    display: -webkit-flex;
    display: -webkit-box;
    display: flex;
    -webkit-align-items: baseline;
    -webkit-box-align: baseline;
            align-items: baseline;
    position: absolute;
    bottom: 0;
}
.goods_card .saleunit {
    color: #999999;
    margin-right: 10rpx;
}
.goods_card .originprice {
    color: #999;
    text-decoration: line-through;
}
.goods_card .cart_btn {
    position: absolute;
    bottom: 0;
    right: 20rpx;
    width: 50rpx;
    height: 50rpx;
    background: #9151FF;
    border-radius: 50%;
    overflow: hidden;
}

