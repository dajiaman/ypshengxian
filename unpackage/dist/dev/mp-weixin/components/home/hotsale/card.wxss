.hotsale_card {
  width: 710rpx;
  background: #ffffff;
  margin-bottom: 30rpx;
}
.hotsale_card .card_header {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
}
.hotsale_card .card_header .area_title {
      font-size: 28rpx;
      color: #333333;
      text-align: center;
      line-height: 2.2;
}
.hotsale_card .card_img_wrapper {
    position: relative;
    padding: 0 20rpx;
}
.hotsale_card .card_img_wrapper .img {
      width: 100%;
}
.hotsale_card .card_meta {
    padding: 20rpx;
    font-size: 32rpx;
    color: #333333;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
            flex-direction: row;
    width: 670rpx;
}
.hotsale_card .card_meta .card_meta_left {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      width: 530rpx;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      padding-right: 10rpx;
}
.hotsale_card .card_meta .card_meta_left .salename {
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
        font-size: 32rpx;
        color: #000;
        font-weight: bold;
}
.hotsale_card .card_meta .card_meta_left .picktime {
        font-size: 28rpx;
}
.hotsale_card .card_meta .card_meta_right {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      width: 140rpx;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      font-size: 24rpx;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      border-left: 1rpx solid #f3f3f3;
}
.hotsale_card .card_meta .card_meta_right .follownum {
        font-size: 28rpx;
        color: #DD524D;
}
.hotsale_card .card_meta .card_meta_right .followtext {
        font-size: 22rpx;
}
.hotsale_card .card_ft {
    padding: 0 20rpx;
}

