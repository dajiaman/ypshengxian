.shop-map {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 100%;
  position: relative;
}
.shop-map .map_box {
    width: 100%;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    position: absolute;
    top: 0;
    bottom: 300rpx;
}
.shop-map .info_box {
    position: absolute;
    bottom: 0;
    font-size: 24rpx;
    background: #FFFFFF;
    height: 300rpx;
    width: 100%;
}
.shop-map .info_box .content {
      padding: 16rpx;
      border-bottom: 1rpx solid #c3c3c3;
}
.shop-map .info_box .shopname {
      color: #000;
      font-size: 30rpx;
      font-weight: bold;
}
.shop-map .info_box .distance {
      color: #ff5339;
      padding-right: 10rpx;
      border-right: 1px solid #c3c3c3;
}
.shop-map .info_box .shopadress {
      font-size: 24rpx;
      color: #333333;
}
